<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:padding="16dp">

    <!-- Order Summary Section -->
    <LinearLayout
        android:id="@+id/orderSummaryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDEDED"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/orderSummaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Display ordered items, quantities, and prices here -->
        <TextView
            android:id="@+id/totalQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total Quantity: 2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total: $100.00"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Delivery Address Section -->
    <LinearLayout
        android:id="@+id/deliveryAddressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderSummaryLayout"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deliveryAddressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Address"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:prompt="@string/Province"
            app:layout_constraintTop_toBottomOf="@+id/deliveryAddressTitle"
            tools:layout_editor_absoluteX="-16dp" />

        <!-- Display user's delivery address details here -->

    </LinearLayout>

    <!-- Payment Section -->
    <LinearLayout
        android:id="@+id/paymentOptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deliveryAddressLayout"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/paymentTypeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Option"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paymentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash In Delivary"
            android:textSize="18sp" />

        <!-- Display payment method options (credit card, PayPal, etc.) here -->

    </LinearLayout>

    <!-- Payment Section -->
    <LinearLayout
        android:id="@+id/paymentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paymentOptionLayout"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/paymentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="18sp" />

        <!-- Display payment method options (credit card, PayPal, etc.) here -->

    </LinearLayout>

    <!-- Place Order Button -->
    <Button
        android:id="@+id/placeOrderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paymentLayout"
        android:layout_marginTop="24dp"
        android:text="Place Order"
        android:textSize="18sp" />
</RelativeLayout>
